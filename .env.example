# Camera System Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# NX Witness Server Configuration
NEXT_PUBLIC_NX_SERVER_HOST=localhost
NEXT_PUBLIC_NX_SERVER_PORT=7001
NEXT_PUBLIC_NX_USERNAME=admin
NEXT_PUBLIC_NX_PASSWORD=your-password

# NX Cloud Auto-Login Configuration
# Set these to enable automatic login to cloud systems
# Leave empty to disable auto-login (will show login dialog instead)
NEXT_PUBLIC_NX_CLOUD_USERNAME=
NEXT_PUBLIC_NX_CLOUD_PASSWORD=

# External Authentication API
# URL for external license/authentication API
EXTERNAL_AUTH_API_URL=http://localhost/license-ht/api.php

# Branding
NEXT_PUBLIC_BRAND_NAME=Hotware
NEXT_PUBLIC_BRAND_LOGO=/images/hotware-logo.png

# Authentication
JWT_SECRET=your-super-secret-key-change-in-production
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Database (if implemented)
DATABASE_URL=postgresql://user:password@localhost:5432/hotware_db

# Optional: Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Development
NODE_ENV=development